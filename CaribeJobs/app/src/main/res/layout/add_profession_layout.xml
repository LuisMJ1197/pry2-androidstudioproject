<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="1000dp"
    android:minHeight="450dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar profesión"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/comforta"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/professionslasd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de profesión"
            android:fontFamily="@font/comforta"/>

        <Spinner
            android:id="@+id/professionsSpinner"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:fontFamily="@font/comforta"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/experienceyears"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Años de experiencia"
                android:fontFamily="@font/comforta"
                android:inputType="number"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comforta"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:hint="Detalle"
                android:imeOptions="actionDone"
                android:fontFamily="@font/comforta"
                android:inputType="text|textMultiLine"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/costperhour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Coste por hora"
                android:fontFamily="@font/comforta"
                android:inputType="number"
                 />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_margin="@dimen/activity_vertical_margin"
            android:id="@+id/addProfessionBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="@dimen/textLV1"
            android:fontFamily="@font/comforta"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/background_light"
            />

    </LinearLayout>
</LinearLayout>