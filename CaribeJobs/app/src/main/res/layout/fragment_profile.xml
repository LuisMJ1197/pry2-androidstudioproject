<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingStart="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/activity_vertical_margin"
                    android:id="@+id/profilePictureLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/profilePictureCardView"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:elevation="12dp"
                            app:cardCornerRadius="235dp">

                            <ImageView
                                android:id="@+id/profilePictureIMG"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_insert_photo_black_24dp" />

                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:id="@+id/usernameLB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comforta"
                            android:textAlignment="textStart"
                            android:textColor="#2B2B2B"
                            android:textSize="@dimen/textSize" />
                        <ImageView
                            android:scaleType="fitEnd"
                            android:id="@+id/imageView2"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/arrowTint"/>

                </LinearLayout>

                <LinearLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingStart="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/activity_vertical_margin"
                    android:id="@+id/personalInfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:scaleType="fitCenter"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.5"
                            android:tint="@color/iconTint"
                            android:src="@drawable/ic_person_outline_black_24dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:fontFamily="@font/comforta"
                            android:text="Información personal"
                            android:textAlignment="textStart"
                            android:textColor="#2B2B2B"
                            android:textSize="@dimen/textSize" />

                        <ImageView
                            android:scaleType="fitEnd"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/arrowTint"/>

                    </LinearLayout>

                    <View
                        style="@style/Divider"
                        android:foreground="@color/dividerColor"
                        />
                </LinearLayout>

                <LinearLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingStart="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/activity_vertical_margin"
                    android:id="@+id/addressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:scaleType="fitCenter"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.5"
                            android:tint="@color/iconTint"
                            android:src="@drawable/ic_location_on_black_24dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:fontFamily="@font/comforta"
                            android:text="Dirección"
                            android:textAlignment="textStart"
                            android:textColor="#2B2B2B"
                            android:textSize="@dimen/textSize" />

                        <ImageView
                            android:scaleType="fitEnd"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/arrowTint"/>

                    </LinearLayout>

                    <View
                        style="@style/Divider"
                        android:foreground="@color/dividerColor"
                        />
                </LinearLayout>

                <LinearLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingStart="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/activity_vertical_margin"
                    android:id="@+id/professionsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:scaleType="fitCenter"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.5"
                            android:tint="@color/iconTint"
                            android:src="@drawable/ic_work_black_24dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:fontFamily="@font/comforta"
                            android:text="Profesiones"
                            android:textAlignment="textStart"
                            android:textColor="#2B2B2B"
                            android:textSize="@dimen/textSize" />

                        <ImageView
                            android:scaleType="fitEnd"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/arrowTint"/>

                    </LinearLayout>

                    <View
                        style="@style/Divider"
                        android:foreground="@color/dividerColor"
                        />
                </LinearLayout>

                <LinearLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingStart="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/activity_vertical_margin"
                    android:id="@+id/scheduleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:scaleType="fitCenter"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.5"
                            android:tint="@color/iconTint"
                            android:src="@drawable/ic_schedule_black_24dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:fontFamily="@font/comforta"
                            android:text="Horario de disponibilidad"
                            android:textAlignment="textStart"
                            android:textColor="#2B2B2B"
                            android:textSize="@dimen/textSize" />

                        <ImageView
                            android:scaleType="fitEnd"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/arrowTint"/>

                    </LinearLayout>

                    <View
                        style="@style/Divider"
                        android:foreground="@color/dividerColor"
                        />
                </LinearLayout>

                <LinearLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingStart="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/activity_vertical_margin"
                    android:id="@+id/workZonesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:scaleType="fitCenter"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.5"
                            android:tint="@color/iconTint"
                            android:src="@drawable/ic_location_on_black_24dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:fontFamily="@font/comforta"
                            android:text="Zonas de trabajo"
                            android:textAlignment="textStart"
                            android:textColor="#2B2B2B"
                            android:textSize="@dimen/textSize" />

                        <ImageView
                            android:scaleType="fitEnd"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/arrowTint"/>

                    </LinearLayout>

                    <View
                        style="@style/Divider"
                        android:foreground="@color/dividerColor"
                        />
                </LinearLayout>

                <LinearLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingStart="@dimen/activity_vertical_margin"
                    android:paddingEnd="@dimen/activity_vertical_margin"
                    android:id="@+id/referencesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:scaleType="fitCenter"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.5"
                            android:tint="@color/iconTint"
                            android:src="@drawable/ic_group_black_24dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:fontFamily="@font/comforta"
                            android:text="Referencias"
                            android:textAlignment="textStart"
                            android:textColor="#2B2B2B"
                            android:textSize="@dimen/textSize" />

                        <ImageView
                            android:scaleType="fitEnd"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:tint="@color/arrowTint"/>

                    </LinearLayout>

                    <View
                        style="@style/Divider"
                        android:foreground="@color/dividerColor"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</layout>